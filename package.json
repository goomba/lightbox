{
	"name": "@goomba/lightbox",
	"version": "0.0.0",
	"description": "A lightbox component for React",
	"main": "lib/cjs/index.js",
	"module": "lib/esm/index.js",
	"types": "lib/esm/index.d.ts",
	"repository": "git@github.com:goomba/lightbox.git",
	"author": "Michael Yuen <iam@mikey.baby>",
	"license": "GPL-3.0",
	"private": false,
	"scripts": {
		"checkTypes": "tsc --noEmit -p tsconfig.cjs.json && tsc --noEmit -p tsconfig.esm.json",
		"clean": "rm -rf lib",
		"lint": "eslint .",
		"storybook": "start-storybook -p 6006",
		"build-storybook": "build-storybook"
	},
	"dependencies": {
		"framer-motion": "^2.8.0"
	},
	"devDependencies": {
		"@babel/core": "^7.11.6",
		"@storybook/addon-actions": "^6.0.26",
		"@storybook/addon-essentials": "^6.0.26",
		"@storybook/addon-links": "^6.0.26",
		"@storybook/react": "^6.0.26",
		"@types/jest": "^26.0.14",
		"@types/react": "^16.9.51",
		"@types/react-dom": "^16.9.8",
		"@typescript-eslint/eslint-plugin": "^4.4.0",
		"@typescript-eslint/parser": "^4.4.0",
		"babel-loader": "^8.1.0",
		"eslint": "^7.11.0",
		"eslint-config-prettier": "^6.12.0",
		"husky": "^4.3.0",
		"jest": "^26.5.2",
		"lint-staged": "^10.4.0",
		"prettier": "^2.1.2",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-is": "^16.13.1",
		"ts-jest": "^26.4.1",
		"typescript": "^4.0.3"
	},
	"files": [
		"lib"
	],
	"husky": {
		"hooks": {
			"pre-commit": "yarn checkTypes && lint-staged"
		}
	},
	"lint-staged": {
		"*.ts": [
			"eslint --fix",
			"prettier --write",
			"jest --findRelatedTests"
		],
		"*.{json,md}": "prettier --write"
	}
}
